package exo2;
import java.util.*;
public class exo2
{
    public static void main(String[] Args)
    {
        int nbphotocopie;
        double prix;
        System.out.print("Donner le nombre des photocopies: ");
        Scanner variable = new Scanner(System.in);
        nbphotocopie = variable.nextInt();
        if (nbphotocopie <=10)
        {
            prix = nbphotocopie * 2;
        }
        else if (nbphotocopie <=30)
        {
            prix = 10*2 + (nbphotocopie - 20)*1.5;
        }
        else
            prix = 10*2 + (20)*1.5 + (nbphotocopie - 30)*1;
        System.out.print("Le prix des photocopie est de: " +prix);


    }
}
